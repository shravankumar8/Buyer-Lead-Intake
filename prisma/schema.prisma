generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl=env("DIRECT_DB_URL")
}

model Buyer {
  id          String   @id @default(uuid())
  fullName    String
  email       String?  @unique
  phone       String
  city        City
  propertyType PropertyType
  bhk         Bhk?
  purpose     Purpose
  budgetMin   Int?
  budgetMax   Int?
  timeline    Timeline
  source      Source
  status      Status   @default(New)
  notes       String?  @db.Text
  tags        String[] @db.Text
  ownerId     String
  updatedAt   DateTime @updatedAt
  history     BuyerHistory[]
}

model BuyerHistory {
  id        String   @id @default(uuid())
  buyerId   String
  changedBy String
  changedAt DateTime @default(now())
  diff      Json

  buyer Buyer @relation(fields: [buyerId], references: [id])
}

enum City {
  Chandigarh
  Mohali
  Zirakpur
  Panchkula
  Other
}

enum PropertyType {
  Apartment
  Villa
  Plot
  Office
  Retail
}

enum Bhk {
  
  Studio
  One
  Two
  Three
  Four
}

enum Purpose {
  Buy
  Rent
}

enum Timeline {
  M0_3       @map("0-3m")
  M3_6       @map("3-6m")
  GT6        @map(">6m")
  Exploring  @map("Exploring")
}


enum Source {
  Website
  Referral
  Walk_in
  Call
  Other
}

enum Status {
  New
  Qualified
  Contacted
  Visited
  Negotiation
  Converted
  Dropped
}
